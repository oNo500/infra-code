{
  "metadata": {
    "name": "dev",
    "description": "本地开发环境配置，用于个人开发调试",
    "scope": "local",
    "version": "1.0.0",
    "author": "Code Infra Team",
    "tags": ["development", "local", "debug"]
  },
  "config": {
    "permissions": {
      "allow": ["**/*"],
      "deny": []
    },
    "enabledTools": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "Grep",
      "Glob",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch"
    ],
    "workingDirectory": ".",
    "mcpServers": {
      "serena": {
        "command": "npx",
        "args": ["-y", "@infrasoftbe/serena"],
        "env": {
          "SERENA_MODE": "interactive,editing",
          "SERENA_DEBUG": "true"
        }
      },
      "sequential-thinking": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
      }
    }
  }
}
