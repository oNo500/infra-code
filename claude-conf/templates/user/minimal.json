{
  "metadata": {
    "name": "minimal",
    "description": "最小化配置，仅包含基本工具",
    "scope": "user",
    "version": "1.0.0",
    "author": "Code Infra Team",
    "tags": ["minimal", "lightweight", "basic"]
  },
  "config": {
    "permissions": {
      "allow": ["**/*"],
      "deny": ["node_modules/**", ".git/**"]
    },
    "enabledTools": [
      "Read",
      "Write",
      "Edit",
      "Bash"
    ]
  }
}
