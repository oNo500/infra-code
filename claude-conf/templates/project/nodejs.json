{
  "metadata": {
    "name": "nodejs",
    "description": "Node.js 后端项目配置",
    "scope": "project",
    "version": "1.0.0",
    "author": "Code Infra Team",
    "tags": ["nodejs", "backend", "api", "server"]
  },
  "config": {
    "permissions": {
      "allow": [
        "src/**",
        "lib/**",
        "test/**",
        "tests/**",
        "*.config.js",
        "*.config.ts",
        "package.json",
        "tsconfig.json"
      ],
      "deny": [
        "node_modules/**",
        "dist/**",
        "build/**",
        ".git/**",
        "*.log"
      ]
    },
    "enabledTools": [
      "Read",
      "Write",
      "Edit",
      "Bash",
      "Grep",
      "Glob",
      "Task",
      "TodoWrite"
    ],
    "mcpServers": {
      "serena": {
        "command": "npx",
        "args": ["-y", "@infrasoftbe/serena"],
        "env": {
          "SERENA_MODE": "interactive,editing"
        }
      }
    },
    "extraKnownMarketplaces": {
      "nodejs": {
        "source": "./plugins/nodejs"
      }
    },
    "enabledPlugins": {
      "nodejs@nodejs": true
    }
  }
}
