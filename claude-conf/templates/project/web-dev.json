{
  "metadata": {
    "name": "web-dev",
    "description": "Web 开发项目配置，包含前端开发工具和 MCP 服务",
    "scope": "project",
    "version": "1.0.0",
    "author": "Code Infra Team",
    "tags": ["web", "frontend", "react", "vue"]
  },
  "config": {
    "permissions": {
      "allow": [
        "src/**",
        "public/**",
        "components/**",
        "pages/**",
        "styles/**",
        "*.config.js",
        "*.config.ts",
        "package.json",
        "tsconfig.json"
      ],
      "deny": [
        "node_modules/**",
        "dist/**",
        "build/**",
        ".next/**",
        ".git/**"
      ]
    },
    "enabledTools": [
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Bash",
      "Grep",
      "Glob",
      "Task"
    ],
    "mcpServers": {
      "playwright": {
        "command": "npx",
        "args": ["-y", "@executeautomation/playwright-mcp-server"]
      },
      "magic": {
        "command": "npx",
        "args": ["-y", "@21st-dev/mcp-server-magic"]
      }
    },
    "extraKnownMarketplaces": {
      "web-dev": {
        "source": "./plugins/web-dev"
      }
    },
    "enabledPlugins": {
      "web-dev@web-dev": true
    }
  }
}
