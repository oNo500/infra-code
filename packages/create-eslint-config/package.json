{
  "name": "@infra-x/create-eslint-config",
  "type": "module",
  "version": "0.1.3",
  "description": "CLI to copy ESLint config source into a monorepo.",
  "author": "infra-x",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oNo500/infra-code.git",
    "directory": "packages/create-eslint-config"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "create-eslint-config": "./dist/index.mjs",
    "cec": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0"
  },
  "devDependencies": {
    "@infra-x/eslint-config": "workspace:*",
    "@infra-x/typescript-config": "workspace:*",
    "@types/node": "^25.3.1",
    "eslint": "^9.39.3",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  }
}
