{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",

  // ============================================================
  // TypeScript Next.js 配置 (Next.js Configuration)
  // ============================================================
  // 适用场景:
  //   - Next.js 项目
  //   - React SSR/SSG 应用
  //   - 全栈 React 应用
  //
  // 核心特性:
  //   - TypeScript 只做类型检查
  //   - Next.js 负责编译和打包
  //   - 支持 JSX 和 React
  //   - 包含 DOM 类型
  // ============================================================

  "extends": "./tsconfig.base.json",

  "compilerOptions": {
    // ==========================================================
    // 模块系统 (Module System)
    // ==========================================================

    "module": "ESNext",
    // 保留 ES 模块语法，交给 Next.js 处理

    "moduleResolution": "Bundler",
    // 打包工具模式，支持 package.json exports

    // ==========================================================
    // 输出配置 (Output)
    // ==========================================================

    "noEmit": true,
    // 不生成编译输出文件
    // TypeScript 仅用于类型检查
    // 实际编译由 Next.js 负责

    // ==========================================================
    // JSX 配置 (JSX)
    // ==========================================================

    // "jsx": "preserve",
    // 保留 JSX 语法，由 Next.js 处理转换
    "jsx": "react-jsx",
    // next 16 使用的是 react-jsx

    // ==========================================================
    // 运行环境 (Environment)
    // ==========================================================

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    // 包含浏览器 DOM API 类型

    // ==========================================================
    // Next.js 特定配置 (Next.js Specific)
    // ==========================================================

    "allowSyntheticDefaultImports": true,
    // 允许从没有默认导出的模块中默认导入

    "incremental": true,
    // 启用增量编译，加速后续编译

    "plugins": [{ "name": "next" }]
    // Next.js 编译器插件
  }
}
