{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vite",

  // ============================================================
  // TypeScript Vite + React 配置 (Vite Configuration)
  // ============================================================
  // 适用场景:
  //   - Vite + React 项目
  //   - Vite + Vue 项目（移除 jsx 配置）
  //   - 其他 Vite 前端项目
  //
  // 核心特性:
  //   - TypeScript 只做类型检查
  //   - Vite 负责编译和打包
  //   - 支持 React 17+ JSX 转换
  //   - 包含 DOM 类型
  // ============================================================

  "extends": "./tsconfig.base.json",

  "compilerOptions": {

    // ==========================================================
    // 模块系统 (Module System)
    // ==========================================================

    "module": "preserve",
    // 保留原始模块语法，完全交给 Vite 处理
    // moduleResolution 默认为 Bundler

    // ==========================================================
    // 输出配置 (Output)
    // ==========================================================

    "noEmit": true,
    // 不生成编译输出文件
    // TypeScript 仅用于类型检查
    // 实际编译由 Vite 负责

    // ==========================================================
    // JSX 配置 (JSX)
    // ==========================================================

    "jsx": "react-jsx",
    // React 17+ 的 JSX 转换
    // 自动导入 jsx runtime，无需 import React

    // ==========================================================
    // 运行环境 (Environment)
    // ==========================================================

    "lib": ["ESNext", "DOM", "DOM.Iterable"]
    // 包含浏览器 DOM API 类型
  }
}
