{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "NestJS (SWC)",

  // ============================================================
  // TypeScript NestJS 配置 - SWC 编译模式
  // ============================================================
  // 适用场景:
  //   - NestJS 后端服务（使用 SWC 编译）
  //   - TSC 仅用于类型检查
  //
  // 核心特性:
  //   - noEmit: true - 不生成文件，SWC 负责编译
  //   - 支持装饰器和元数据反射
  //   - node16 模块解析模式
  // ============================================================

  "extends": "./tsconfig.base.json",

  "compilerOptions": {

    // ==========================================================
    // 模块系统 (Module System) - 适配 Node.js 运行时
    // ==========================================================

    "module": "esnext",
    // ES 模块语法，由 SWC 转换

    "moduleResolution": "node16",
    // node16 模式，适配 Node.js 运行时

    // ==========================================================
    // 输出配置 (Output) - TSC 仅类型检查
    // ==========================================================

    "noEmit": true,
    // 不生成文件，SWC 负责编译输出

    // ==========================================================
    // 装饰器支持 (Decorators) - NestJS 必需
    // ==========================================================

    "experimentalDecorators": true,
    // 启用实验性装饰器语法
    // NestJS 核心功能依赖装饰器

    "emitDecoratorMetadata": true,
    // 生成装饰器元数据
    // 用于依赖注入和反射

    // ==========================================================
    // NestJS 特定 (NestJS Specific)
    // ==========================================================

    "strictPropertyInitialization": false,
    // 放宽属性初始化检查
    // NestJS 依赖注入会在运行时初始化属性

    // ==========================================================
    // 运行环境 (Environment)
    // ==========================================================

    "types": ["node"]
    // 包含 Node.js 类型定义
  }
}
