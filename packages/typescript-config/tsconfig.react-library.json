{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library",

  // ============================================================
  // TypeScript React 组件库配置 (React Library Configuration)
  // ============================================================
  // 适用场景:
  //   - React 组件库开发
  //   - UI 组件库（如 packages/ui）
  //   - 需要发布的 React 包
  //
  // 核心特性:
  //   - 生成类型声明文件 (.d.ts)
  //   - 支持 React 17+ JSX 转换
  //   - 包含 DOM 类型
  //   - 使用 Bundler 模式（现代打包工具兼容）
  // ============================================================

  "extends": "./tsconfig.base.json",

  "compilerOptions": {

    // ==========================================================
    // 模块系统 (Module System)
    // ==========================================================

    "module": "preserve",
    // 保留原始模块语法，交给打包工具处理

    "moduleResolution": "bundler",
    // bundler 模式：适配 Vite/tsdown/esbuild 等打包工具

    // ==========================================================
    // 输出配置 (Output)
    // ==========================================================

    "declaration": true,
    // 生成 .d.ts 类型声明文件
    // 组件库必备，为使用者提供类型支持

    "isolatedDeclarations": true,
    // 每个文件的导出类型必须可推断，配合 bundler 并行生成 dts

    "sourceMap": true,
    // 生成 .js.map 调试映射文件

    // ==========================================================
    // JSX 配置 (JSX)
    // ==========================================================

    "jsx": "react-jsx",
    // React 17+ 的 JSX 转换
    // 自动导入 jsx runtime，无需 import React

    // ==========================================================
    // 运行环境 (Environment)
    // ==========================================================

    "lib": ["esnext", "DOM", "DOM.Iterable"]
    // 包含浏览器 DOM API 类型
  }
}
