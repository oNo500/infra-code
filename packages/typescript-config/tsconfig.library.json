{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",

  // ============================================================
  // TypeScript 库配置 (Library Configuration)
  // ============================================================
  // 适用场景:
  //   - npm 包开发
  //   - 工具库开发
  //   - 组件库开发
  //   - 使用 bundler 的项目 (tsdown/Vite/esbuild)
  //
  // 核心特性:
  //   - tsc 仅类型检查，dts 由 bundler（tsdown 等）生成
  //   - bundler 模式 (module: Preserve)
  // ============================================================

  "extends": "./tsconfig.base.json",

  "compilerOptions": {

    // ==========================================================
    // 模块系统 (Module System)
    // ==========================================================

    "module": "preserve",
    // 保留原始模块语法，由 bundler 处理

    "moduleResolution": "bundler",
    // bundler 模式：适配 Vite/tsdown/esbuild 等打包工具

    // ==========================================================
    // 输出配置 (Output)
    // ==========================================================

    "noEmit": true,
    // 仅类型检查，不输出文件（编译和 dts 由 bundler 处理）

    "declaration": true,
    // 满足 isolatedDeclarations 的前置条件（noEmit 优先，tsc 实际不输出 .d.ts）

    "allowJs": false,
    // 库应为纯 TS

    "isolatedDeclarations": true,
    // 每个文件的导出类型必须可推断，配合 bundler 并行生成 dts

    "noPropertyAccessFromIndexSignature": true
    // 强制使用方括号访问索引签名属性
  }
}
