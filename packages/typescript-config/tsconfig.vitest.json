{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vitest",

  // ============================================================
  // TypeScript Vitest 配置 (Vitest Configuration)
  // ============================================================
  // 适用场景:
  //   - Vitest 单元测试
  //   - Vitest 集成测试
  //   - React/Vue 组件测试
  //   - Node.js 代码测试
  //
  // 核心特性:
  //   - 支持 Vitest globals API（describe、it、expect）
  //   - 同时支持 DOM 和 Node.js 环境
  //   - 放宽部分严格检查（测试代码特性）
  //   - 不生成编译输出
  // ============================================================

  "extends": "./tsconfig.base.json",

  "compilerOptions": {

    // ==========================================================
    // 模块系统 (Module System)
    // ==========================================================

    "module": "esnext",
    // ES 模块语法

    "moduleResolution": "bundler",
    // 打包工具模式

    // ==========================================================
    // 输出配置 (Output)
    // ==========================================================

    "noEmit": true,
    // 不生成编译输出文件
    // Vitest 负责运行测试

    // ==========================================================
    // 运行环境 (Environment)
    // ==========================================================

    "types": ["vitest/globals", "node"],
    // 包含 Vitest 全局 API 和 Node.js 类型

    "lib": ["esnext", "DOM", "DOM.Iterable"],
    // 同时支持 DOM 和 ES 环境
    // 组件测试需要 DOM 类型

    // ==========================================================
    // 测试代码宽松配置 (Relaxed for Tests)
    // ==========================================================

    "noUnusedLocals": false,
    // 测试中允许未使用的变量
    // 例如：测试辅助变量、mock 数据

    "noUnusedParameters": false
    // 测试中允许未使用的参数
    // 例如：回调函数的占位参数
  }
}
